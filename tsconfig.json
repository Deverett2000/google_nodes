{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "rootDir": ".",
    "outDir": "build",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "system-test/*.ts",
    "browser-test/*.ts",
    "browser-test/**/*.ts"
  ],
  "exclude": [
    "test/fixtures",
    "node_modules"
  ]
}
